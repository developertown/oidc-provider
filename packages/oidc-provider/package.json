  "main": "dist/index.js",
  "module": "dist/oidc-provider.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdx build",
    "clean": "rimraf ./dist",
    "format": "prettier --ignore-unknown '**/*.*'",
    "format:check": "yarn run format --check",
    "format:fix": "yarn run format --write",
    "license:add": "license_finder licenses add",
    "license:approve-package": "license_finder approvals add",
    "license:check": "license_finder",
    "license:permit": "license_finder permitted_licenses add",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "yarn run lint --fix",
    "start": "tsdx watch --noClean",
    "test": "vitest --passWithNoTests",
    "test:ui": "vitest --ui --passWithNoTests",
    "test:coverage": "vitest --coverage --passWithNoTests",
    "test:run": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "oidc-client-ts": "^2.1.0",
    "typescript-fsa": "^3.0.0",
    "typescript-fsa-reducers": "^1.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/testing-library__jest-dom": "~5.14.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "babel-loader": "8.2.5",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jsdom": "^25.0.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.4.2",
    "vite": "^7.1.3",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  }
